<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient
                android:startColor="#0094ff"
                android:centerColor="#0094ff"
                android:centerY="1.0"
                android:endColor="#0094ff"
                android:angle="180"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient
                    android:startColor="#0363a8"
                    android:centerColor="#0363a8"
                    android:centerY="1.0"
                    android:endColor="#0363a8"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>