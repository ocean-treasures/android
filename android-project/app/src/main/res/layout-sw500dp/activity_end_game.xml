<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andoid="http://schemas.android.com/tools"
    android:id="@+id/rl_end"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5adcee">
    
    <ImageView
        android:layout_width="270dp"
        android:layout_height="326dp"
        android:src="@drawable/ic_seaweed"
        android:layout_marginLeft="51dp"
        android:layout_marginBottom="-30dp"
        android:layout_alignParentBottom="true"
     />
    
    <ImageView
        android:id="@+id/chest_end"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="235dp"
        android:layout_marginStart="235dp"
        android:src="@drawable/ic_end_game_gold_chest"/>

    <ImageView
        android:id="@+id/iv_logo_end"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_end_game_quote"/>

    <oceantreasur.es.view.CustomButton
        android:id="@+id/btn_play_again"
        android:background="@drawable/custombutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="320dp"
        android:layout_marginRight="140dp"
        android:layout_marginEnd="140dp"
        android:text="@string/play_again"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:typefaceButtonAsset="fonts/CoolCrayon.ttf"/>

</RelativeLayout>