<?xml version = "1.0" encoding = "utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id = "@+id/rl_game"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:orientation = "vertical"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    >

    <android.support.percent.PercentRelativeLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:animateLayoutChanges = "true">

        <ProgressBar
            android:id = "@+id/progressBar"
            style = "?android:attr/progressBarStyleHorizontal"
            app:layout_widthPercent = "80%"
            app:layout_heightPercent = "4%"

            app:layout_marginTopPercent = "3%"
            android:layout_centerHorizontal = "true"
            
            android:progressDrawable = "@drawable/customprogressbar"
            />

    </android.support.percent.PercentRelativeLayout>

    <ImageView
        app:layout_widthPercent = "35%"
        app:layout_heightPercent = "50%"
        android:src = "@drawable/ic_seaweed"

        android:layout_alignParentBottom="true"

        app:layout_marginLeftPercent = "5%"
        app:layout_marginStartPercent = "5%"
        />
    
    <oceantreasur.es.view.CustomTextView
        android:id = "@+id/tv_word"
        app:layout_widthPercent = "35%"
        app:layout_heightPercent = "30%"

        app:layout_marginLeftPercent = "5%"
        app:layout_marginStartPercent = "5%"
        app:layout_marginTopPercent = "25%"

        app:typefaceAsset = "fonts/CoolCrayon.ttf"
        android:textColor = "@color/white"
        android:maxLines = "1"
        android:textAlignment = "center"
    />

    <android.support.percent.PercentRelativeLayout
        app:layout_widthPercent = "60%"
        app:layout_heightPercent = "90%"

        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom = "true"

        app:layout_marginBottomPercent="3%">

        <ImageView
            android:id = "@+id/iv_1"
            app:layout_widthPercent = "43%"
            app:layout_heightPercent = "45%"

            android:layout_alignParentLeft = "true"
            android:layout_alignParentStart = "true"

            app:layout_marginLeftPercent = "5%"
            app:layout_marginStartPercent = "5%"
            app:layout_marginTopPercent = "5%"

            android:background = "@color/white"
            />

        <ImageView
            android:id = "@+id/iv_2"
            app:layout_widthPercent = "43%"
            app:layout_heightPercent = "45%"

            android:layout_alignParentRight = "true"
            android:layout_alignParentEnd = "true"

            app:layout_marginRightPercent = "5%"
            app:layout_marginEndPercent = "5%"
            app:layout_marginTopPercent = "5%"

            android:background = "@color/white"
            />


        <ImageView
            android:id = "@+id/iv_3"
            app:layout_widthPercent = "43%"
            app:layout_heightPercent = "45%"

            android:layout_below="@id/iv_1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            app:layout_marginLeftPercent = "5%"
            app:layout_marginStartPercent = "5%"
            app:layout_marginTopPercent = "4%"

            android:background = "@color/white"
            />

        <ImageView
            android:id = "@+id/iv_4"
            app:layout_widthPercent = "43%"
            app:layout_heightPercent = "45%"

            android:layout_below="@id/iv_2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            app:layout_marginRightPercent = "5%"
            app:layout_marginEndPercent = "5%"
            app:layout_marginTopPercent = "4%"

            android:background = "@color/white"
           />

   </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>