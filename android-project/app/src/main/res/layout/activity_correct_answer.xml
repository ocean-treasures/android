<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.infinote.differentthinking.infinote.views.drawing.DrawingFragment"
        android:animateLayoutChanges="true">

    <ProgressBar
        android:id="@+id/progressBarCorrect"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_widthPercent="80%"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/customprogressbar"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/correct_image"
            app:layout_widthPercent="85%"
            android:layout_height="350sp"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:background="@android:color/holo_red_dark"/>

    </android.support.percent.PercentRelativeLayout>


    <TextView
        android:id="@+id/tv_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5sp"
        android:text="@string/correctWordHeading"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="35sp"
        android:gravity="center" />



    <TextView
        android:id="@+id/tv_wordCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/word"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="50sp"
        android:gravity="center" />

</LinearLayout>
